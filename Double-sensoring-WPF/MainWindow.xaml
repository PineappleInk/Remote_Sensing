<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Module_Graphs="clr-namespace:Module_Graphs" x:Class="Microsoft.Samples.Kinect.BodyBasics.MainWindow"
        xmlns:tools="clr-namespace:MyApp.Tools"
        Title="FOR THE PINGUIN!" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing" >

    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
    </Window.Resources>

    <Viewbox VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid Margin="0,0,0,0" Height="664" Width="1099">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="667*"/>
                <ColumnDefinition Width="392*"/>
                <ColumnDefinition Width="11*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="18*"/>
                <RowDefinition Height="526.5*"/>
                <RowDefinition Height="526.5*"/>
                <RowDefinition Height="18*"/>
            </Grid.RowDefinitions>

            <Image Source="{Binding ImageSource2}" Stretch="UniformToFill" Grid.Column="2" Margin="4.5,7,6,4" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />
            <Button x:Name="Settings" Content="Settings" Grid.Column="2" HorizontalAlignment="Left" Margin="19.6,23.8,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="Settings_Click" IsCancel="True"/>
            <Button x:Name="Clear" Content="Clear" Grid.Column="2" HorizontalAlignment="Left" Margin="133.4,23.8,0,0" Grid.Row="2" VerticalAlignment="Top" Width="75" Click="Clear_Click"/>

            <Module_Graphs:YTGraphWPFUC x:Name="chartBreath" Grid.Row="1" Margin="0,5,4,5" Grid.Column="1" />
            <Module_Graphs:YTGraphWPFUC x:Name="chartPulse" Grid.Row="2" Margin="0,5,4,5" Grid.Column="1" />

        </Grid>
    </Viewbox>
</Window>
