<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Module_Graphs="clr-namespace:Module_Graphs" x:Class="Microsoft.Samples.Kinect.BodyBasics.MainWindow"
        xmlns:tools="clr-namespace:MyApp.Tools"
        Title="FOR THE KING!" 
        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={tools:RatioConverter}, ConverterParameter='0.9' }" 
        Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={tools:RatioConverter}, ConverterParameter='0.9' }"  
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">
    
    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
    </Window.Resources>
    
    <Grid Margin="0,0, 0,0">
        
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="9*"/>
            <ColumnDefinition Width="286*"/>
        </Grid.ColumnDefinitions>

        <Viewbox HorizontalAlignment="Right" Margin="0,0,10.4,372.2" Width="529" Grid.Column="1">
            <Image Source="{Binding ImageSource2}" Stretch="UniformToFill" />
        </Viewbox>

        <Module_Graphs:YTGraphWPFUC x:Name="chartBreath" Grid.Column="1" HorizontalAlignment="Left" Margin="0,0,0,0" VerticalAlignment="Top" Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={tools:RatioConverter}, ConverterParameter='0.2' }" Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={tools:RatioConverter}, ConverterParameter='0.2' }"/>
        <Module_Graphs:YTGraphWPFUC x:Name="chartPulse" Grid.Column="1" HorizontalAlignment="Left" Margin="0,350,0,0" VerticalAlignment="Top" Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={tools:RatioConverter}, ConverterParameter='0.2' }" Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={tools:RatioConverter}, ConverterParameter='0.2' }"/>

        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="910,505,0,0" TextWrapping="Wrap" Text="Pixel values" VerticalAlignment="Top" Height="30" Width="153" Grid.Column="1" RenderTransformOrigin="0.498,1.1"/>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="910,427,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="73" Width="183" Grid.Column="1" Text="Hjärtrytm::"/>
        <TextBlock x:Name="textBlock5" HorizontalAlignment="Left" Margin="910,576,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="23" Width="193" Grid.Column="1"><Span Background="White" Foreground="#FFA31515" FontSize="12.6666666666667" FontFamily="Consolas"><Run Text="Element i andningslistan: "/></Span></TextBlock>
        <TextBlock x:Name="averageBreathingTextBlock" Grid.Column="1" HorizontalAlignment="Left" Margin="910,351,0,0" TextWrapping="Wrap" Text="averageBreathing" VerticalAlignment="Top" Height="71" Width="183"/>
        <TextBlock x:Name="informationTextPulse" Grid.Column="1" HorizontalAlignment="Left" Margin="706,308,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" Height="36" Background="White"><Run Text="Skriv in en önskvärd larmnivå"/><Run Text=" på pulsen"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="informationTextPulse_Copy" Grid.Column="1" HorizontalAlignment="Left" Margin="706,439,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" Height="36"><Run Text="Skriv in en önskvärd larmnivå"/><Run Text=" på "/><Run Text="andningen"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="textBlockSound" Grid.Column="1" HorizontalAlignment="Left" Margin="731,611,0,0" TextWrapping="Wrap" Text="Ljud för larm" VerticalAlignment="Top"/>
        <TextBox x:Name="inputTextPulse" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="706,351,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" MaxLines="2" Text="30"/>
        <TextBox x:Name="inputTextBreathing" Grid.Column="1" HorizontalAlignment="Left" Height="30" Margin="706,490,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Width="169" Text="10"/>

        <Button x:Name="button" Content="Clear Lists" HorizontalAlignment="Left" Margin="1105,536,0,0" VerticalAlignment="Top" Width="74" Click="button_Click" Grid.Column="1"/>
        <Button x:Name="retrieveInputBreathing" Content="Enter" Grid.Column="1" HorizontalAlignment="Left" Margin="753,541,0,0" VerticalAlignment="Top" Width="74" Click="retrieveInputBreathing_Click"/>
        <Button x:Name="retrieveInputPulse" Content="Enter" Grid.Column="1" HorizontalAlignment="Left" Margin="753,410,0,0" VerticalAlignment="Top" Width="74" Click="retrieveInputPulse_Click"/>
        <CheckBox x:Name="checkBoxSound" Content="&#xD;&#xA;" Grid.Column="1" HorizontalAlignment="Left" Margin="753,638,0,0" VerticalAlignment="Top" RenderTransformOrigin="0.452,0.469" IsChecked="True"/>

    </Grid>
</Window>
