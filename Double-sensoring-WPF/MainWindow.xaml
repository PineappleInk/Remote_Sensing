<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Module_Graphs="clr-namespace:Module_Graphs" x:Class="Microsoft.Samples.Kinect.BodyBasics.MainWindow"
        xmlns:tools="clr-namespace:MyApp.Tools"
        Title="FOR THE PINGUIN!" 
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">

    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
    </Window.Resources>

    <Viewbox VerticalAlignment="Stretch" HorizontalAlignment="Stretch">
        <Grid Margin="0,0,0,0" Height="664" Width="1099">

            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="11*"/>
                <ColumnDefinition Width="667*"/>
                <ColumnDefinition Width="392*"/>
                <ColumnDefinition Width="11*"/>
            </Grid.ColumnDefinitions>

            <Grid.RowDefinitions>
                <RowDefinition Height="18*"/>
                <RowDefinition Height="526.5*"/>
                <RowDefinition Height="526.5*"/>
                <RowDefinition Height="18*"/>
            </Grid.RowDefinitions>

            <Image Source="{Binding ImageSource2}" Stretch="UniformToFill" Grid.Column="2" Margin="10,10,10,10" Grid.Row="1" HorizontalAlignment="Stretch" VerticalAlignment="Stretch" />

            <Module_Graphs:YTGraphWPFUC x:Name="chartBreath" Grid.Row="1" Margin="0,5,4,5" Grid.Column="1" />
            <Module_Graphs:YTGraphWPFUC x:Name="chartPulse" Grid.Row="2" Margin="0,5,4,5" Grid.Column="1" />

            <TextBlock x:Name="textBlock" Margin="218,72,0,0" TextWrapping="Wrap" Grid.Column="2" Grid.Row="2" Text="Hjärtrytm:" HorizontalAlignment="Left" Width="134" Height="56" VerticalAlignment="Top"/>
            <TextBlock x:Name="textBlock5" Margin="218,192,0,0" TextWrapping="Wrap" Grid.Column="2" Grid.Row="2" Height="51" VerticalAlignment="Top" HorizontalAlignment="Left" Width="171"><Span Background="White" Foreground="#FFA31515" FontSize="12.6666666666667" FontFamily="Consolas"><Run Text="[TEST] Element i andningslistan: "/></Span></TextBlock>
            <TextBlock x:Name="averageBreathingTextBlock" Grid.Column="2" Grid.Row="2" Margin="218,10,0,0" TextWrapping="Wrap" Text="Andningsfrekvens:" Height="56" VerticalAlignment="Top" HorizontalAlignment="Left" Width="134"/>
            <TextBlock x:Name="informationTextPulse" Grid.Column="2" Grid.Row="2" Margin="16,10,0,0" TextWrapping="Wrap" Background="White" Height="38" VerticalAlignment="Top" HorizontalAlignment="Left" Width="162"><Run Text="Skriv in en önskvärd larmnivå"/><Run Text=" på pulsen"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
            <TextBlock x:Name="informationTextPulse_Copy" Grid.Column="2" Grid.Row="2" Margin="16,113,0,0" TextWrapping="Wrap" Height="38" VerticalAlignment="Top" HorizontalAlignment="Left" Width="162"><Run Text="Skriv in en önskvärd larmnivå"/><Run Text=" på "/><Run Text="andningen"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
            <TextBlock x:Name="textBlockSound" Grid.Column="2" Grid.Row="2" Margin="218,255,0,0" TextWrapping="Wrap" Height="31" VerticalAlignment="Top" HorizontalAlignment="Left" Width="72"><Run Text="Ljud för larm"/><Run Text=":"/></TextBlock>
            <TextBox x:Name="inputTextPulse" Grid.Column="2" Grid.Row="2" Margin="46,49,0,0" TextWrapping="Wrap" MaxLines="1" Text="30" RenderTransformOrigin="0.5,0.5" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="96"/>
            <TextBox x:Name="inputTextBreathing" Grid.Column="2" Grid.Row="2" Margin="46,156,0,0" TextWrapping="Wrap" MaxLines="1" Text="3" Height="30" VerticalAlignment="Top" HorizontalAlignment="Left" Width="96"/>

            <Button x:Name="button" Content="Rensa data" Margin="46,255,0,0" Click="button_Click" Grid.Column="2" Grid.Row="2" RenderTransformOrigin="0.5,0.5" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="96"/>
            <Button x:Name="retrieveInputPulse" Content="Enter" Grid.Column="2" Grid.Row="2" Margin="46,82,0,0" Click="retrieveInputPulse_Click" RenderTransformOrigin="0.5,0.5" Height="24" VerticalAlignment="Top" HorizontalAlignment="Left" Width="96"/>
            <Button x:Name="retrieveInputBreathing" Content="Enter" Grid.Column="2" Grid.Row="2" Margin="46,191,0,0" Click="retrieveInputBreathing_Click" RenderTransformOrigin="0.5,0.5" Height="20" VerticalAlignment="Top" HorizontalAlignment="Left" Width="96"/>
            <CheckBox x:Name="checkBoxSound" Content="&#xD;&#xA;" Grid.Column="2" Grid.Row="2" Margin="305,257,0,0" RenderTransformOrigin="0.452,0.469" IsChecked="False" Height="18" VerticalAlignment="Top" HorizontalAlignment="Left" Width="22"/>

        </Grid>
    </Viewbox>
</Window>
