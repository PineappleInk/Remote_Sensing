<Window x:Class="Microsoft.Samples.Kinect.BodyBasics.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Body Basics" 
        Height="600" Width="700" 
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">
    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
    </Window.Resources>
    <Grid Margin="0,0,-6.4,0.4">
        <Viewbox HorizontalAlignment="Left" Margin="50,10,0,306" Width="295">
            <Image Source="{Binding ImageSource1}" Stretch="UniformToFill" />
        </Viewbox>
        <Viewbox HorizontalAlignment="Right" Margin="0,10,43.4,211.1" Width="385">
            <Image Source="{Binding ImageSource2}" Stretch="UniformToFill" />
        </Viewbox>
        <TextBlock x:Name="textBlock" HorizontalAlignment="Left" Margin="73,361,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="47" Width="198"/>
        <TextBlock x:Name="textBlock1" HorizontalAlignment="Right" Margin="0,361,92,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="47" Width="140"/>
        <TextBlock x:Name="textBlock2" HorizontalAlignment="Left" Margin="238,440,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="86" Width="153"/>
        <TextBlock x:Name="textBlock3" HorizontalAlignment="Left" Margin="470,440,0,0" TextWrapping="Wrap" Text="TextBlock" VerticalAlignment="Top" Height="98" Width="140"/>
        <Slider x:Name="Slider" Margin="73,450,0,0" Width="33" Height="76" RenderTransformOrigin="0.5,0.5" Maximum="1" LargeChange="0.1" ValueChanged="slider_ValueChanged" Orientation="Vertical" Cursor="Hand" Value="0.66" HorizontalAlignment="Left">
            <Slider.RenderTransform>
                <TransformGroup>
                    <ScaleTransform/>
                    <SkewTransform/>
                    <RotateTransform Angle="180"/>
                    <TranslateTransform/>
                </TransformGroup>
            </Slider.RenderTransform>
        </Slider>
    </Grid>
</Window>
