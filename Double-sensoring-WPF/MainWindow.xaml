<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Module_Graphs="clr-namespace:Module_Graphs" x:Class="Microsoft.Samples.Kinect.BodyBasics.MainWindow"
        xmlns:tools="clr-namespace:MyApp.Tools"
        Title="FOR THE KING!" 
        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={tools:RatioConverter}, ConverterParameter='0.9' }" 
        Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={tools:RatioConverter}, ConverterParameter='0.9' }"  
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">

    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
    </Window.Resources>

    <Grid Margin="0,0, 0,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="1139*"/>
            <ColumnDefinition Width="745*"/>
            <ColumnDefinition Width="18*"/>
        </Grid.ColumnDefinitions>

        <Grid.RowDefinitions>
            <RowDefinition Height="18*"/>
            <RowDefinition Height="526,5*"/>
            <RowDefinition Height="526,5*"/>
            <RowDefinition Height="18*"/>
        </Grid.RowDefinitions>

        <Viewbox Margin="16.5,11,2.5,22" Grid.Column="2" Grid.Row="1">
            <Image Source="{Binding ImageSource2}" Stretch="UniformToFill" />
        </Viewbox>

        <Module_Graphs:YTGraphWPFUC x:Name="chartBreath" Margin="0,0,357.5,21.5" VerticalAlignment="Bottom" Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={tools:RatioConverter}, ConverterParameter='0.4' }" Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={tools:RatioConverter}, ConverterParameter='0.6' }" Grid.ColumnSpan="2" Grid.Column="1" Grid.RowSpan="2"/>
        <Module_Graphs:YTGraphWPFUC x:Name="chartPulse" Margin="0,4.5,357.5,16" Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={tools:RatioConverter}, ConverterParameter='0.4' }" Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={tools:RatioConverter}, ConverterParameter='0.6' }" Grid.Column="1" Grid.Row="2" Grid.ColumnSpan="2"/>

        <TextBlock x:Name="textBlock2" Margin="158,0,0,112.5" TextWrapping="Wrap" Text="Pixel values" Grid.Column="2" Grid.Row="2" RenderTransformOrigin="0.498,1.1" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="154"/>
        <TextBlock x:Name="textBlock" Margin="188,0,0,199.5" TextWrapping="Wrap" Grid.Column="2" Grid.Row="2" Text="Hjärtrytm:" HorizontalAlignment="Left" Width="124" Height="76" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="textBlock5" Margin="158,0,0,51.5" TextWrapping="Wrap" Grid.Column="2" Grid.Row="2" HorizontalAlignment="Left" Width="130" Height="56" VerticalAlignment="Bottom"><Span Background="White" Foreground="#FFA31515" FontSize="12.6666666666667" FontFamily="Consolas"><Run Text="Element i andningslistan: "/></Span></TextBlock>
        <TextBlock x:Name="averageBreathingTextBlock" Grid.Column="2" Grid.Row="2" Margin="188,0,0,298.5" TextWrapping="Wrap" Text="Andningsfrekvens:" HorizontalAlignment="Left" Width="124" Height="55" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="informationTextPulse" Grid.Column="2" Grid.Row="2" Margin="20,346,330.5,330.5" TextWrapping="Wrap" Background="White"><Run Text="Skriv in en önskvärd larmnivå"/><Run Text=" på pulsen"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="informationTextPulse_Copy" Grid.Column="2" Grid.Row="2" Margin="16,0,0,188.5" TextWrapping="Wrap" HorizontalAlignment="Left" Width="124" Height="57" VerticalAlignment="Bottom"><Run Text="Skriv in en önskvärd larmnivå"/><Run Text=" på "/><Run Text="andningen"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="textBlockSound" Grid.Column="2" Grid.Row="2" Margin="37,0,0,126.5" TextWrapping="Wrap" Text="Ljud för larm" HorizontalAlignment="Left" Width="70" Height="20" VerticalAlignment="Bottom"/>
        <TextBox x:Name="inputTextPulse" Grid.Column="2" Grid.Row="2" Margin="83.5,266.5,140.5,25" TextWrapping="Wrap" MaxLines="1" Text="30" RenderTransformOrigin="0.5,0.5"/>
        <TextBox x:Name="inputTextBreathing" Grid.Column="2" Grid.Row="2" Margin="84,0,0,220.5" TextWrapping="Wrap" MaxLines="1" Text="10" Height="17" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="36"/>

        <Button x:Name="button" Content="Clear Lists" Margin="188,0,0,28.5" Click="button_Click" Grid.Column="2" Grid.Row="2" RenderTransformOrigin="0.5,0.5" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="34"/>
        <Button x:Name="retrieveInputBreathing" Content="Enter" Grid.Column="2" Grid.Row="2" Margin="84,0,0,188.5" Click="retrieveInputBreathing_Click" Height="18" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="36"/>
        <Button x:Name="retrieveInputPulse" Content="Enter" Grid.Column="2" Grid.Row="2" Margin="60,390,15,301.5" Click="retrieveInputPulse_Click" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="checkBoxSound" Content="&#xD;&#xA;" Grid.Column="2" Grid.Row="2" Margin="30,0,0,113.5" RenderTransformOrigin="0.452,0.469" IsChecked="False" HorizontalAlignment="Left" Width="20" Height="31" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
