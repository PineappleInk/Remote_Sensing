<Window
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:Module_Graphs="clr-namespace:Module_Graphs" x:Class="Microsoft.Samples.Kinect.BodyBasics.MainWindow"
        xmlns:tools="clr-namespace:MyApp.Tools"
        Title="FOR THE KING!" 
        Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={tools:RatioConverter}, ConverterParameter='0.9' }" 
        Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={tools:RatioConverter}, ConverterParameter='0.9' }"  
        WindowStartupLocation="CenterScreen"
        WindowState="Maximized"
        Loaded="MainWindow_Loaded"
        Closing="MainWindow_Closing">

    <Window.Resources>
        <SolidColorBrush x:Key="MediumGreyBrush" Color="#ff6e6e6e" />
        <SolidColorBrush x:Key="KinectPurpleBrush" Color="#ff52318f" />
        <SolidColorBrush x:Key="KinectBlueBrush" Color="#ff00BCF2" />
    </Window.Resources>

    <Grid Margin="0,0, 0,0">

        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="18*"/>
            <ColumnDefinition Width="699*"/>
            <ColumnDefinition Width="83*"/>
            <ColumnDefinition Width="348*"/>
        </Grid.ColumnDefinitions>

        <Viewbox Margin="24,0,4,389.5" Grid.Column="2" Grid.ColumnSpan="2">
            <Image Source="{Binding ImageSource2}" Stretch="UniformToFill" />
        </Viewbox>

        <Module_Graphs:YTGraphWPFUC x:Name="chartBreath" HorizontalAlignment="Left" Margin="-32,0,0,0" VerticalAlignment="Top" Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={tools:RatioConverter}, ConverterParameter='0.4' }" Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={tools:RatioConverter}, ConverterParameter='0.6' }" Grid.ColumnSpan="3"/>
        <Module_Graphs:YTGraphWPFUC x:Name="chartPulse" HorizontalAlignment="Left" Margin="-32,362,0,0" VerticalAlignment="Top" Height="{Binding Source={x:Static SystemParameters.PrimaryScreenHeight}, Converter={tools:RatioConverter}, ConverterParameter='0.4' }" Width="{Binding Source={x:Static SystemParameters.PrimaryScreenWidth}, Converter={tools:RatioConverter}, ConverterParameter='0.6' }" Grid.ColumnSpan="3"/>

        <TextBlock x:Name="textBlock2" Margin="157.5,0,0,112.5" TextWrapping="Wrap" Text="Pixel values" Grid.Column="3" RenderTransformOrigin="0.498,1.1" Height="30" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="154"/>
        <TextBlock x:Name="textBlock" Margin="187.5,0,0,199.5" TextWrapping="Wrap" Grid.Column="3" Text="Hjärtrytm:" HorizontalAlignment="Left" Width="124" Height="76" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="textBlock5" Margin="157.5,0,0,51.5" TextWrapping="Wrap" Grid.Column="3" HorizontalAlignment="Left" Width="130" Height="56" VerticalAlignment="Bottom"><Span Background="White" Foreground="#FFA31515" FontSize="12.6666666666667" FontFamily="Consolas"><Run Text="Element i andningslistan: "/></Span></TextBlock>
        <TextBlock x:Name="averageBreathingTextBlock" Grid.Column="3" Margin="187.5,0,0,298.5" TextWrapping="Wrap" Text="Andningsfrekvens:" HorizontalAlignment="Left" Width="124" Height="55" VerticalAlignment="Bottom"/>
        <TextBlock x:Name="informationTextPulse" Grid.Column="2" Margin="19.5,346,347,330.5" TextWrapping="Wrap" Background="White" Grid.ColumnSpan="2"><Run Text="Skriv in en önskvärd larmnivå"/><Run Text=" på pulsen"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="informationTextPulse_Copy" Grid.Column="2" Margin="15.5,0,0,188.5" TextWrapping="Wrap" HorizontalAlignment="Left" Width="124" Grid.ColumnSpan="2" Height="57" VerticalAlignment="Bottom"><Run Text="Skriv in en önskvärd larmnivå"/><Run Text=" på "/><Run Text="andningen"/><LineBreak/><Run/><LineBreak/><Run/></TextBlock>
        <TextBlock x:Name="textBlockSound" Grid.Column="2" Margin="37,0,0,126.5" TextWrapping="Wrap" Text="Ljud för larm" HorizontalAlignment="Left" Width="70" Height="20" VerticalAlignment="Bottom" Grid.ColumnSpan="2"/>
        <TextBox x:Name="inputTextPulse" Grid.Column="2" Margin="20.5,390,37.5,300.5" TextWrapping="Wrap" MaxLines="1" Text="30" RenderTransformOrigin="0.5,0.5">
            <TextBox.RenderTransform>
                <TransformGroup>
                    <ScaleTransform ScaleY="-1"/>
                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform/>
                </TransformGroup>
            </TextBox.RenderTransform>
        </TextBox>
        <TextBox x:Name="inputTextBreathing" Grid.Column="3" Margin="84.5,0,0,220.5" TextWrapping="Wrap" MaxLines="1" Text="10" Height="17" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="35"/>

        <Button x:Name="button" Content="Clear Lists" Margin="187.5,0,0,28.5" Click="button_Click" Grid.Column="3" RenderTransformOrigin="0.5,0.5" Height="18" VerticalAlignment="Bottom" HorizontalAlignment="Left" Width="35"/>
        <Button x:Name="retrieveInputBreathing" Content="Enter" Grid.Column="3" Margin="84.5,0,0,188.5" Click="retrieveInputBreathing_Click" Height="18" VerticalAlignment="Bottom" RenderTransformOrigin="0.5,0.5" HorizontalAlignment="Left" Width="35"/>
        <Button x:Name="retrieveInputPulse" Content="Enter" Grid.Column="2" Margin="60.5,390,345,300.5" Click="retrieveInputPulse_Click" RenderTransformOrigin="0.5,0.5" Grid.ColumnSpan="2"/>
        <CheckBox x:Name="checkBoxSound" Content="&#xD;&#xA;" Grid.Column="3" Margin="29.5,0,0,113.5" RenderTransformOrigin="0.452,0.469" IsChecked="False" HorizontalAlignment="Left" Width="20" Height="31" VerticalAlignment="Bottom"/>

    </Grid>
</Window>
